{% extends 'front/base.html.twig' %}

{% block title %}{{ 'project' | trans }}: {{ 'catalog.list' | trans }}{% endblock %}
{% block content %}
    <h1>
        <a title="{{ 'product.create' | trans }}" href="{{ path('front_create',{'entity':entity}) }}" class="btn btn-info">
            <i class="far fa-plus-square"></i>
        </a>
        {{ 'catalog.list' | trans }}
    </h1>
    <div class="row">
        {% for element in pagination %}
            <div class="col-md-3">
                <div class="card" style="width: 18rem;margin-bottom: 20px">
                    <div class="product-price">{{ element.price }}â‚¬</div>
                    {% if element.image %}
                        <img src="{{ vich_uploader_asset(element.image, 'file') }}" alt="{{ element.slug }}" width="90%"/>
                    {% else %}
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="{{ element.slug }}">
                    {% endif %}
                    <div class="dropdown-divider"></div>
                    <div class="card-body">
                        <h5 class="card-title">{{ element }}</h5>
                        <p class="card-text">{{ element.description |easyadmin_truncate(100) }}</p>
                        <a href="{{ path('front_edit',{'entity':'product','id':element.id}) }}" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                            {{ 'edit' | trans }}
                        </a>
                        <a href="{{ path('front_edit',{'view':'show','entity':'product','id':element.id}) }}" class="btn btn-info">
                            <i class="far fa-eye"></i>
                            {{ 'view' | trans }}
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}